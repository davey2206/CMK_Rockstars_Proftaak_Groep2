@{
    ViewData["Title"] = "Edit Blog";
}
@section css {
    <link href="@Url.Content("~/css/Post.css")" rel="stylesheet" />
}

<div class="container">
    <div id="content_post">
        <div>
            <h1>Edit blog</h1>
        </div>
        <form class="rounded mt-2" asp-controller="Home" asp-action="Edit">
            <div class="form-group">
                <label>Title</label>
                <input name="Title" type="text" class="form-control" value="@ViewBag.article.Title">
            </div>
            <div class="form-group">
                <label>Content</label>
                <textarea name="Content" type="text" class="form-control" rows="3">@ViewBag.article.Content</textarea>
            </div>
            <button id="btn_add" type="submit" class="btn btn-primary">Edit Blog</button>
        </form>
    </div>
</div>
<script>
    $('#Add').addClass('navContainer__item navContainer__item_state-active');
</script>