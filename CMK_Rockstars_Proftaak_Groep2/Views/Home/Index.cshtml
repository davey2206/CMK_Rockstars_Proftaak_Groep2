@{
    ViewData["Title"] = "Home Page";
}
@section css {
    <link href="@Url.Content("~/css/Home.css")" rel="stylesheet" />
}

    <div class="container p-5">
        <div class="text-center">
            <div class="row">
                <div class="col-10 text-left">
                    <h1>Homepage</h1>
                </div>
                <div class="col 1 text-sm-left mt-3">
                    <a id="add_btn" class="btn btn-primary" asp-action="add" asp-controller="home">Create post</a>
                </div>
            </div>
            <div id="table_block" class="mt-2 rounded">
                <div class="row">
                    <div class="col-6 text-left pl-5 pt-2 pb-2">
                        <h2>Posts</h2>
                    </div>
                    <div class="col 1 mr-2" style="align-self: center; text-align: right;">
                        <input type="text" placeholder="Search" />
                    </div>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col" width="500vh">Title</th>
                            <th scope="col" width="1000vh">Tribe</th>
                            <th scope="col" width="500vh">Rockstar</th>
                            <th scope="col" width="500vh">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var article in ViewData["Articles"] as List<Article>)
                        {
                        <tr>
                            <th scope="row">@article.Title</th>
                            <td>@article.TribeName</td>
                            <td>@article.RockstarName</td>
                            <td>
                                <a>edit</a>
                                <a class="ml-2">view</a>
                                <a class="ml-2">delete</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script>
        $('#Home').addClass('navContainer__item navContainer__item_state-active');
    </script>
