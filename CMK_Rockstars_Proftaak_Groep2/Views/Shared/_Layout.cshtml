<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMK_Rockstars_Proftaak_Groep2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    @RenderSection("css", false)
</head>
<body>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <header>
    </header>
    <div class="wrapper">
        <nav id="sidebar">
            <img id="sidebar__logo" src="~/img/logo.jpg" />
            <div id="sidebar__navContainer">
                <ul id="sidebar_itemContainer">
                    <a id="Home" class="navContainer__item" asp-action="Index" asp-controller="Home"><img class="navItem__img" src="~/Icons/home.svg" alt="Home" /></a>
                    <a id="Team" class="navContainer__item" asp-action="Index" asp-controller="Team"><img class="navItem__img" src="~/Icons/team.svg" alt="Our team" /></a>
                    <a id="Add" class="navContainer__item" asp-action="Add" asp-controller="Home"><img class="navItem__img" src="~/Icons/add.svg" alt="Add" /></a>
                    <a id="Add" class="navContainer__item" asp-action="Auth" asp-controller="Login"><img class="navItem__img" src="~/Icons/cloud.svg" alt="Auth" /></a>
                </ul>
            </div>
            <div id="profilepicContainer">
                <a id="Profile" asp-action="Index" asp-controller="Profile"><img id="profilepic" src="~/img/logo.jpg" alt="Profile picture" /></a>
            </div>
        </nav>

        <div id="content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
