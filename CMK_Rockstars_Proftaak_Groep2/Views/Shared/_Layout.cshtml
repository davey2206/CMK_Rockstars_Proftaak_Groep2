<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMK_Rockstars_Proftaak_Groep2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    @RenderSection("css", false)
</head>
<body>
    <header>
    </header>
    <div class="wrapper">
        <nav id="sidebar">
            <img src="~/img/Logo.jpg" width="100%" />
            <!-- Sidebar Links -->
            <ul class="list-unstyled components">
                <li id="nav_Home"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li id="nav_Team"><a asp-controller="Team" asp-action="Index">Team</a></li>
                <li id="nav_Profile"><a asp-controller="Profile" asp-action="Index">Profile</a></li>
                <li><a href="#">Logout</a></li>
            </ul>
            <!-- Sidebar Header -->
            <div class="sidebar-header">
                <button type="button" id="sidebarCollapse" class="navbar-btn">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
            </div>
        </nav>

        <div id="content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                $(this).toggleClass('active');
            });
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
