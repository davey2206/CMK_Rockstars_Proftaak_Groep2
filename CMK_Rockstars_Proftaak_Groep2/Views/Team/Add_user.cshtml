@{
    ViewData["Title"] = "User Page";
}
@section css {
    <link href="@Url.Content("~/css/user.css")" rel="stylesheet" />
}

<div class="container">
    <div id="content_profile">
        <div>
            <h1>Create a user</h1>
        </div>
        <form class="rounded mt-2">
            <div class="form-group">
                <label>Name</label>
                <input type="text" class="form-control">
            </div>
            <div class="form-group">
                <label>Tribe</label>
                <input type="text" class="form-control">
            </div>
            <div class="form-group">
                <label>Image</label>
                <input type="file" class="form-control">
            </div>
            <button id="btn_add" type="submit" class="btn btn-primary">Create user</button>
        </form>
    </div>
</div>
