@{
    ViewData["Title"] = "Team Page";
}
@section css {
    <link href="@Url.Content("~/css/Team.css")" rel="stylesheet" />
}
<div class="container p-5">
    <div class="text-center">
        <div class="row">
            <div class="col-10 text-left">
                <h1>Our Team</h1>
            </div>
            <div class="col 1 text-sm-left mt-3">
                <a id="add_btn_user" class="btn btn-primary" asp-action="Add_user" asp-controller="Team">Create User</a>
                <a id="add_btn_tribe" class="btn btn-primary" asp-action="Add_tribe" asp-controller="Team" style="display: none;">Create Tribe</a>
            </div>
        </div>
        <div class="text-left mt-3">
            <div class="btn-group">
                <button onclick="SwitchTable()" class="btn rounded-left" id="radio_btn_user" disabled>Users</button>
                <button onclick="SwitchTable()" class="btn rounded-right" id="radio_btn_tribe">tribes</button>
            </div>
        </div>
        <div id="table_block" class="mt-2 rounded">
            <div id="user_table">
                <div class="row">
                    <div class="col-6 text-left pl-5 pt-2 pb-2">
                        <h2>Users</h2>
                    </div>
                    <div class="col 1 mr-2" style="align-self: center; text-align: right;">
                        <input type="text" placeholder="Search" />
                    </div>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col" width="500vh">Name</th>
                            <th scope="col" width="500vh">Role</th>
                            <th scope="col" width="1000vh">Description</th>
                            <th scope="col" width="500vh">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rockstar in ViewData["Rockstars"] as List<Rockstar>)
	                    {
                        <tr>
                            <td>@rockstar.Name</td>
                            <td>@rockstar.Role</td>
                            <td>@rockstar.Description</td>
                            <td>
                                <a>edit</a>
                                <a class="ml-2">view</a>
                                <a class="ml-2">delete</a>
                            </td>
                        </tr>
	                    }                        
                    </tbody>
                </table>
            </div>
            <div id="tribe_table" style="display: none">
                <div class="row">
                    <div class="col-6 text-left pl-5 pt-2 pb-2">
                        <h2>Tribes</h2>
                    </div>
                    <div class="col 1 mr-2" style="align-self: center; text-align: right;">
                        <input type="text" placeholder="Search" />
                    </div>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col" width="500vh">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tribe in ViewData["Tribes"] as List<Tribe>)
                        {
                        <tr>
                            <td>@tribe.Name</td>
                            <td>
                                <a>edit</a>
                                <a class="ml-2">view</a>
                                <a class="ml-2">delete</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    function SwitchTable() {
        var tribeTable = document.getElementById("tribe_table");
        var userTable = document.getElementById("user_table");
        var tribe = document.getElementById("add_btn_tribe");
        var user = document.getElementById("add_btn_user");
        if (tribeTable.style.display == "none") {
            document.getElementById("radio_btn_user").disabled = false;
            document.getElementById("radio_btn_tribe").disabled = true;
            tribeTable.style.display = "";
            userTable.style.display = "none";
            tribe.style.display = "";
            user.style.display = "none";
        }
        else {
            document.getElementById("radio_btn_user").disabled = true;
            document.getElementById("radio_btn_tribe").disabled = false;
            tribeTable.style.display = "none";
            userTable.style.display = "";
            tribe.style.display = "none";
            user.style.display = "";
        }
    }
</script>
<script>
    $('#Team').addClass('navContainer__item navContainer__item_state-active');
</script>
